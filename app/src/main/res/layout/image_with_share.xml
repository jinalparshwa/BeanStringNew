<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rr_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/imageView_close"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/closee" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rr_image"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_share_bean"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_margin="@dimen/_5dp"
            android:src="@drawable/small_b" />

        <ImageView
            android:id="@+id/img_share_fb"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/img_share_twitter"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/img_share_gplus"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:src="@drawable/gplus" />


    </LinearLayout>

</RelativeLayout>