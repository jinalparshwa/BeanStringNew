<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/login_green_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:src="@drawable/logo_white_new" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/__3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/facebook_invite"
                    android:layout_width="@dimen/_17dp"
                    android:layout_height="@dimen/_17dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_7dp"
                    android:src="@drawable/fb_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Invites"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/search"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_margin="@dimen/_5dp"
                android:src="@drawable/ic_search_black_24dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_margin="@dimen/_5dp"
                    android:src="@drawable/notification" />

                <TextView
                    android:id="@+id/noti_count"
                    android:layout_width="@dimen/_15dp"
                    android:layout_height="@dimen/_15dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:background="@drawable/red_notification"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10_sp"
                    android:visibility="gone" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llmybean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beans"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/drawer"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:src="@drawable/menudrower_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:src="@drawable/close"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170dp"
        android:background="@color/light_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_130dp"
            android:layout_marginTop="@dimen/_40dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30dp"
                android:text=""
                android:textColor="@color/login_green_color"
                android:textSize="@dimen/_13_sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:text=""
                android:textColor="@color/login_green_color"
                android:textSize="@dimen/_13_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_150dp"
            android:layout_marginTop="@dimen/_60dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:text="City:  "
                android:textColor="@color/white"
                android:textSize="@dimen/_12_sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/_12_sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/dark_gray">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/folunfol"
                    android:layout_width="@dimen/_70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@color/login_green_color"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10_sp" />

                <TextView
                    android:id="@+id/txt_block"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@color/login_green_color"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10_sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_150dp"
                android:layout_marginTop="@dimen/_14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/beans_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beans"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/linearLayout2"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_toEndOf="@+id/linearLayout2"
                android:layout_toRightOf="@+id/linearLayout2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/follower_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_260dp"
                android:layout_marginTop="@dimen/_14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/following_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />


            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/_110dp"
            android:layout_height="@dimen/_115dp"
            android:layout_marginLeft="@dimen/_30dp"
            android:background="@color/white">


            <ImageView
                android:id="@+id/pics"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5dp" />


        </RelativeLayout>


    </RelativeLayout>


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/green_text"
            app:tabMode="fixed" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</LinearLayout>