<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:background="@color/login_green_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/logo_white_new" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/ll_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/__3dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/facebook_invite"
                        android:layout_width="@dimen/_17dp"
                        android:layout_height="@dimen/_17dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_7dp"
                        android:src="@drawable/fb_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Invites"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12_sp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/search"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_margin="@dimen/_5dp"
                    android:src="@drawable/ic_search_black_24dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_margin="@dimen/_5dp"
                        android:src="@drawable/notification" />

                    <TextView
                        android:id="@+id/noti_count"
                        android:layout_width="@dimen/_15dp"
                        android:layout_height="@dimen/_15dp"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:background="@drawable/red_notification"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10_sp"
                        android:visibility="gone" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/llmybean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upload_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12_sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beans"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12_sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/drawer"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/menudrower_white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/close"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_photo"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp" />

            <EditText
                android:id="@+id/etpost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/edit_text_background"
                android:gravity="start"
                android:hint="What's on your mind?"
                android:inputType="textMultiLine"
                android:lines="5"
                android:paddingLeft="@dimen/_5dp"
                android:paddingTop="@dimen/_10dp"
                android:textSize="@dimen/_12_sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/txt_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />


            <VideoView
                android:id="@+id/videopost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tabupload"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/postimg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tabupload"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5dp"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/postimg1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uploading"
                        android:textSize="@dimen/_12_sp" />

                    <TextView
                        android:id="@+id/progress_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="50%"
                        android:textSize="@dimen/_12_sp" />

                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/progresbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/tabupload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@color/eyeslidebg"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/camera"
                        android:layout_width="@dimen/_70dp"
                        android:layout_height="@dimen/_70dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/img_border"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/_27dp"
                            android:layout_height="@dimen/_27dp"
                            android:layout_gravity="center"
                            android:src="@drawable/new_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Camera"
                            android:textSize="@dimen/_10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gallery"
                        android:layout_width="@dimen/_70dp"
                        android:layout_height="@dimen/_70dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/img_border"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/_27dp"
                            android:layout_height="@dimen/_27dp"
                            android:layout_gravity="center"
                            android:src="@drawable/new_album" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Photo"
                            android:textSize="@dimen/_10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/video"
                        android:layout_width="@dimen/_70dp"
                        android:layout_height="@dimen/_70dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/img_border"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/_27dp"
                            android:layout_height="@dimen/_27dp"
                            android:layout_gravity="center"
                            android:src="@drawable/new_video" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Video"
                            android:textSize="@dimen/_10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/postbtn"
                        android:layout_width="@dimen/_70dp"
                        android:layout_height="@dimen/_70dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/img_border"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/postborder"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_70dp"
                                android:layout_height="@dimen/_30dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_55dp"
                                android:gravity="center"
                                android:text="Post"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13dp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Gallery"
                                android:textSize="@dimen/_10dp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>