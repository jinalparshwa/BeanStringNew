<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp" />

        <EditText
            android:id="@+id/etpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/edit_text_background"
            android:gravity="start"
            android:hint="What's on your mind?"
            android:inputType="textMultiLine"
            android:lines="8"
            android:paddingLeft="@dimen/_5dp"
            android:paddingTop="@dimen/_10dp"
            android:textSize="@dimen/_12_sp" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rrphoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/edit_text_background">


        <TextView
            android:id="@+id/uploadimage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@android:color/transparent"
            android:hint="Add Photo"
            android:paddingTop="@dimen/_5dp"
            android:textSize="@dimen/_12_sp" />

        <ImageView
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_10dp"
            android:src="@drawable/black_camera" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rrvideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/edit_text_background">


        <TextView
            android:id="@+id/uploadvideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@android:color/transparent"
            android:hint="Add Video"
            android:paddingTop="@dimen/_5dp"
            android:textSize="@dimen/_12_sp" />

        <ImageView
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_10dp"
            android:src="@drawable/video" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr_addsearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/login_green_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Add It"
            android:textColor="@color/white"
            android:textSize="@dimen/_13_sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="invisible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uploading"
                android:textSize="@dimen/_12_sp" />

            <TextView
                android:id="@+id/progress_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="50%"
                android:textSize="@dimen/_12_sp" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progresbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>