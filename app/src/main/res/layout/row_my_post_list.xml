<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtpost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:text=""
                android:textSize="@dimen/_12_sp" />

            <TextView
                android:id="@+id/time_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_10_sp" />

            <LinearLayout
                android:id="@+id/ll_beans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_7dp"
                android:background="@color/login_green_color"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/mybeans" />

                <TextView
                    android:id="@+id/tott_beans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/_22dp"
            android:layout_height="@dimen/_22dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5dp"
            android:src="@drawable/delete" />

    </RelativeLayout>
</LinearLayout>