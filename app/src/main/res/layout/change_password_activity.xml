<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_password_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/login_green_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:src="@drawable/logo_white_new" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/__3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/facebook_invite"
                    android:layout_width="@dimen/_17dp"
                    android:layout_height="@dimen/_17dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_7dp"
                    android:src="@drawable/fb_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Invites"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/search"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_margin="@dimen/_5dp"
                android:src="@drawable/ic_search_black_24dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_margin="@dimen/_5dp"
                    android:src="@drawable/notification" />

                <TextView
                    android:id="@+id/noti_count"
                    android:layout_width="@dimen/_15dp"
                    android:layout_height="@dimen/_15dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:background="@drawable/red_notification"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10_sp"
                    android:visibility="gone" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llmybean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/change_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beans"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/drawer"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:src="@drawable/menudrower_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:src="@drawable/close"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginTop="@dimen/_30dp">

        <TextView
            android:id="@+id/txteditprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:background="@color/login_dark_color"
            android:padding="@dimen/_5dp"
            android:text=" EDIT PROFILE "
            android:textColor="@color/white"
            android:textSize="@dimen/_12_sp" />

        <TextView
            android:id="@+id/txtchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:padding="@dimen/_5dp"
            android:text=" CHANGE PASSWORD "
            android:textColor="@color/black"
            android:textSize="@dimen/_12_sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginRight="@dimen/_20dp" />


    <LinearLayout
        android:id="@+id/llchange_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_30dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp"
            android:text="Enter Old Password"
            android:textColor="@color/black"
            android:textSize="@dimen/_12_sp" />


        <EditText
            android:id="@+id/edt_enter_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/edit_text_background"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/_10dp"
            android:paddingLeft="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp"
            android:textSize="@dimen/_12_sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:paddingTop="@dimen/_15dp"
            android:text="Enter New Password"
            android:textColor="@color/black"
            android:textSize="@dimen/_12_sp" />


        <EditText
            android:id="@+id/edt_enter_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/edit_text_background"
            android:hint="New Password"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/_10dp"
            android:paddingLeft="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp"
            android:textSize="@dimen/_12_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:paddingTop="@dimen/_15dp"
            android:text="Re-type New Password"
            android:textColor="@color/black"
            android:textSize="@dimen/_12_sp" />


        <EditText
            android:id="@+id/edt_retype_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@drawable/edit_text_background"
            android:hint="Re-type New Password"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/_10dp"
            android:paddingLeft="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp"
            android:textSize="@dimen/_12_sp" />

        <RelativeLayout
            android:id="@+id/rr_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@color/login_green_color">

            <TextView
                android:id="@+id/save_it_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10dp"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="@dimen/_15_sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_5dp"
                android:paddingLeft="@dimen/_15dp"
                android:paddingRight="@dimen/_15dp"
                android:paddingTop="@dimen/_15dp"
                android:text="OTP No."
                android:textColor="@color/black"
                android:textSize="@dimen/_12_sp" />


            <EditText
                android:id="@+id/et_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:hint="Enter OTP no"
                android:inputType="number"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_12_sp" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rr_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@color/login_green_color">

            <TextView
                android:id="@+id/txtsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10dp"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="@dimen/_15_sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Resend_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10dp"
                android:text="RESEND OTP"
                android:textColor="@color/black"
                android:textSize="@dimen/_15_sp" />

        </RelativeLayout>


    </LinearLayout>


    <ScrollView
        android:id="@+id/edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etfname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingLeft="@dimen/_10dp"
                        android:paddingTop="@dimen/_10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12_sp" />

                    <EditText
                        android:id="@+id/etlname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingLeft="@dimen/_5dp"
                        android:paddingTop="@dimen/_10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12_sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/pencil" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/editemail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/edit_text_background"
                    android:padding="@dimen/_10dp"
                    android:textSize="@dimen/_12_sp" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/pencil" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/editmobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/edit_text_background"
                    android:maxLength="10"
                    android:padding="@dimen/_10dp"
                    android:textSize="@dimen/_12_sp" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/pencil" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/editdob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/edit_text_background"
                    android:padding="@dimen/_10dp"
                    android:textSize="@dimen/_12_sp" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/pencil" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/edit_text_background">


                    <Spinner
                        android:id="@+id/spinner_state"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5dp" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/pencil"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/edit_text_background">


                    <Spinner
                        android:id="@+id/spinner_city"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5dp" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/pencil"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/edit_text_background">


                    <Spinner
                        android:id="@+id/spinner_college"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5dp" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/pencil"
                    android:visibility="invisible" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:text="Upload Propfile Pic"
                    android:textSize="@dimen/_13_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvchoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/login_dark_color"
                    android:padding="@dimen/_10dp"
                    android:text="     Choose File     "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12_sp" />

                <TextView
                    android:id="@+id/picname"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_50dp"
                    android:text="Balveer.jpg"
                    android:textSize="@dimen/_12_sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/realimage"
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="@dimen/_50dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/name" />

                    <ImageView
                        android:id="@+id/removeimage"
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="@dimen/_20dp"
                        android:src="@drawable/remove" />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnedit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/login_green_color"
                android:text="SAVE IT"
                android:textColor="@color/white"
                android:textSize="@dimen/_15_sp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
